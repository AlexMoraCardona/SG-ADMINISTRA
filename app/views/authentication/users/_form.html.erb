<div class="container col-5 card p-5">
    <br>

    <%= form_with model: @user do |form| %>
        <% @user.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>

        
        <div class="form-group">    
            <%= form.label :nro_document, style: "display: block" %>
            <%= form.text_field :nro_document,  class: "form-control" %>
        </div>
        <div class="form-group">    
            <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name,  class: "form-control" %>
        </div>
        <div class="form-group">    
            <%= form.label :email, style: "display: block" %>
            <%= form.email_field :email,  class: "form-control" %>
        </div>
        <div class="form-group">    
            <%= form.label :phone, style: "display: block" %>
            <%= form.text_field :phone,  class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= form.label :username, style: "display: block" %>
            <%= form.text_field :username,  class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :state,  style: "display: block" %>
            <%= form.radio_button :state, 0 %>
            <label for="Inactivo"><%= t('common.inactivo') %></label>
            <%= form.radio_button :state, 1 %>
            <label for="Activo"><%= t('common.activo') %></label>
        </div>

        <div class="form-group">
            <%= form.label :level_id,  style: "display: block" %>
            <%= form.radio_button :level_id, 1 %>
            <label for="Nuevo">Nuevo</label>
            <%= form.radio_button :level_id, 2 %>
            <label for="Antiguo">Antiguo</label>
            <%= form.radio_button :level_id, 3 %>
            <label for="Administrador">Administrador</label>
        </div>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, users_path %>
        <hr>
    <% end %>
</div>        
 

