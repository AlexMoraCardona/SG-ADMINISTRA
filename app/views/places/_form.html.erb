<div class="container col-5 card p-5">
    <br>
    <%= form_with model: @place do |form| %>
        <% @place.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>  
        
        <div>
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Seleccionar si se encuentra disponible el horario.">Disponible:</button>           
            <%= form.select(:state, [['Si', 0], ['No', 1]]) %>
        </div>  

        <div>    
            <button type="button" class="btn btn-light" data-bs-toggle="tooltip" data-bs-html="true" title="Ingresar el horario.">Horario:</button>           
            <%= form.text_field :place_reserva,  class: "form-control" %>
        </div>

        <br>    
        <button type="submit" class="btn btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-primary" type="button">Retornar</button>'.html_safe, places_path %>

    <% end %>
</div>        
 <br>
